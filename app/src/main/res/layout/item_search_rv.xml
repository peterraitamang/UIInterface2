<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_recycler_fcontact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_profile_img"
        android:layout_width="60sp"
        android:layout_height="60dp"
        android:src="@drawable/person" />
    <TextView
        android:id="@+id/tv_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_profile_img"
        android:text="Alesandro del Piero"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="10sp"
        android:layout_marginTop="5sp"/>
    <TextView
        android:id="@+id/tv_contactPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_profile_img"
        android:layout_below="@id/tv_contactName"
        android:text="(+62)812-2377-2993"
        android:paddingStart="10sp"
        android:layout_marginBottom="5sp"/>

</RelativeLayout>